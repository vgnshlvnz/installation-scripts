currentDir=$(pwd)
currentTime=`date +%d%m%Y-%H%M%S`
successLog=`touch $HOME/install-log-$currentTime.log`
errorLog=`touch $HOME/error-log-$currentTime.log`


echo "You are in $currentDir"
echo $currentTime
echo $successLog
echo $errorLog

#nested if loop, to validate the existence of install,error log files

echo "Checking if log file(s) exist in $HOME"
if [[ `ls *.log 2> /dev/null| wc -l` -gt 0 ]]; then
	echo "Continuing installation"
else
	echo "Log file(s) does not exist in $HOME directory"
	echo "Will create now"
	echo $successLog
	echo $errorLog
fi

echo "hi"
